#!/bin/sh
# postinst script for enc-converters
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

FW_LIBDIR=/usr/lib/fieldworks
VAR_LIBDIR=/var/lib/fieldworks

CONFFILE=/etc/ld.so.conf.d/encConverters.conf
if [ -f $CONFFILE ]; then
    mv $CONFFILE $CONFFILE.OLD
fi
GLOBALREGFILE=/etc/mono/registry/LocalMachine/software/sil/silencconverters40/values.xml
if [ -f $GLOBALREGFILE ]; then
    mv $GLOBALREGFILE $GLOBALREGFILE.OLD
fi

case "$1" in
    configure)
        echo $FW_LIBDIR>$CONFFILE
        cd $FW_LIBDIR
        CPU_ARCH=$(uname -m)
        ARCH_EXT=""
        if [ "$CPU_ARCH" = "x86_64" ]; then
            ARCH_EXT="_64"
        fi
        for f in libecdriver$ARCH_EXT.so libIcuConvEC$ARCH_EXT.so libIcuRegexEC$ARCH_EXT.so \
                 libIcuTranslitEC$ARCH_EXT.so libPyScriptEncConverter$ARCH_EXT.so; do
            if [ ! -e $f ]; then ln -s -T $f $f.1.0; fi
        done
        # set up the registry for the general case
        mkdir -p $(dirname $GLOBALREGFILE)
        if [ -f $VAR_LIBDIR/registry/LocalMachine/software/sil/silencconverters40/values.xml ]; then
            cp $VAR_LIBDIR/registry/LocalMachine/software/sil/silencconverters40/values.xml $GLOBALREGFILE
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        if [ -f $CONFFILE.OLD ]; then
            mv $CONFFILE.OLD $CONFFILE;
        else
            rm -f $CONFFILE;
        fi
        if [ -f $GLOBALREGFILE.OLD ]; then
            mv $GLOBALREGFILE.OLD $GLOBALREGFILE;
        else
            rm -f $GLOBALREGFILE;
        fi
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
