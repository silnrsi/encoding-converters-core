#!/bin/sh
# postrm script for enc-converters
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PREFIX=/opt/mono-sil

CONFFILE=/etc/ld.so.conf.d/encConverters.conf
GLOBALREGFILE=/etc/mono/registry/LocalMachine/software/sil/silencconverters40/values.xml

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        if [ -f $CONFFILE.OLD ]; then
            mv $CONFFILE.OLD $CONFFILE;
        else
            rm -f $CONFFILE;
        fi
        if [ -f $GLOBALREGFILE.OLD ]; then
            mv $GLOBALREGFILE.OLD $GLOBALREGFILE;
        elif [ -f $GLOBALREGFILE ]; then
            rm -rf $(dirname $GLOBALREGFILE)
        fi
        if [ -d $PREFIX/lib/encConverters ]; then
            for f in $PREFIX/lib/encConverters/lib*.so*; do
                if [ -L $f ]; then rm -f $f; fi
            done
            rmdir --ignore-fail-on-non-empty $PREFIX/lib/encConverters
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
